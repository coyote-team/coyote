%tr.item
  %td
    = link_to [current_organization,representation.resource] do
      = resource_link_target(representation.resource,dom_id(representation))
  %td
    = representation.status.humanize
  %td
    %span.label.label-info= representation.metum_title
  %td
    %span.label.label-default= LanguageList::LanguageInfo.find(representation.language)&.name
  %td.text-right
    = link_to [current_organization,description], class: "btn btn-show", title: "Show this description", "aria-describedby": "description-text-#{description.id}" do
      View
    %nbsp
    - if policy(description).edit?
      = link_to edit_organization_description_path(current_organization,description), class: "btn btn-edit", title: "Edit this description", "aria-describedby": "description-text-#{description.id}" do
        Edit
      %nbsp
    - if policy(description).destroy?
      = link_to [current_organization,description], title: "Delete this description" , class: "btn btn-destroy",  :method => :delete, :data => { :confirm => "Are you sure you want to delete #{description}?"}, "aria-describedby": "description-text-#{description.id}" do
        Delete
%tr
  %td{id: dom_id(representation)}
    .text-wrap= to_html(description.text)
