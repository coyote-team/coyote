-title = "Showing Image #{@image}"
-meta title: title
-cache ['v1', @image, current_user] do
  .entity-outer
    .entity
      .entity-inner
        %header
          %h1#page-title{tabindex: -1}
            =title
            -klass = 'label label-' + image_status_css_class(@image.status_code)
            %span{class: klass}= @image.status
        .row
          .col-md-3
            = render "image", image: @image
          .col-md-9
            %table.entity-table
              %caption.sr-only Key value pairs for this image
              %tbody
                %tr
                  %th{scope: "row"} Website
                  %td= @image.website
                %tr
                  %th{scope: "row"} Canonical ID
                  %td= @image.canonical_id
                %tr
                  %th{scope: "row"} Path
                  %td= @image.path
                %tr
                  %th{scope: "row"} Context
                  %td= @image.context
                %tr
                  %th{scope: "row"} Caption
                  %td= @image.title
                %tr
                  %th{scope: "row"} Priority
                  %td= @image.priority ? "True" : "False"
                %tr
                  %th{scope: "row"} Tags
                  %td
                    - tag_cloud(@image.tags, %w(css1 css2 css3 css4)) do |tag, css_class|
                      = link_to organization_images_path(current_organization,tag: tag.name), :class => css_class do
                        = tag.name
                %tr
                  %th{scope: "row"} Context
                  %td
                    %ul
                      -if @image.page_urls
                        - @image.page_urls.each do |u|
                          %li=link_to u, u, target: "_blank"
                %tr
                  %th{scope: "row"} Updated
                  %td
                    =@image.updated_at
                %tr
                  %th{scope: "row"} Created 
                  %td
                    =@image.created_at

            %nav.show-nav{role:"navigation"}
              %ul.list-inline
                -if organization_user.admin?
                  %li
                    = link_to edit_organization_image_path(current_organization,@image), title: "Edit this image", class: 'btn btn-primary' do
                      Edit

                  %li
                    - css_id = "quick-assign"
                    = render "assign_to", css_id: css_id, image: @image, users: @users

                -if current_user
                  %li
                    =link_to 'Describe', new_organization_description_path(current_organization,image_id: @image.id), class: "btn btn-primary", title: "Add a description for Image #{@image.id}" 
                %br
                %br
              %ul.list-inline
                %li
                  = link_to organization_images_path(current_organization), class: 'btn btn-info', title: "View the images index" do
                    
                    Images
                - if @previous_image
                  %li
                    = link_to organization_image_path(@previous_image), class: 'btn btn-info', title: "View the previous image" do
                      %i.fa.fa-fw.fa-arrow-left{"aria-hidden" => "true"}
                      Previous
                - if @next_image
                  %li
                    = link_to organization_image_path(current_organization,@next_image), class: 'btn btn-info', title: "View the next image" do
                      %i.fa.fa-fw.fa-arrow-right{"aria-hidden" => "true"}
                      Next
              %br
              %br
          -if @image.descriptions.length > 0
            .col-md-12
              %h3 Descriptions
              = render "descriptions/table", descriptions: @image.descriptions


          -if @image.assignments.length > 0
            .col-md-12
              %h3 Assignments
              = render "assignments/table", assignments: @image.assignments
