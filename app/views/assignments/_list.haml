.group
  -if title
    %h4<
      Assigned Users:
      %span.countable=assignments.count
  %ul.assignments
    -assignments.each do |assignment|
      %li.deletable
        = assignment.user
        -#= link_to assignment, title: "Delete this assignment" , class: "badge",  :method => :delete, :data => { :confirm => "Are you sure you want to delete #{assignment}?"} do
        -if admin?
          = link_to assignment, title: "Delete this assignment" , class: "quick-delete",  :method => :delete, :remote => true do
            %i.fa.fa-times{"aria-hidden" => "true"}
