- title = 'Users'
- meta title: title
- cache ['v1',organization_user.staff?,users] do
  .index-outer
    .index
      .index-inner
        %header
          %h1#page-title{tabindex: -1}
            #{title}: #{users.count}

        %table.index-table
          %caption.sr-only Index table for users
          %thead
            %tr
              %th{scope: "col"}<
                First name
              %th{scope: "col"}<
                Last name
              %th{scope: "col"}<
                Email
              %th{scope: "col"}<
                Descriptions
              %th{scope: "col"}<
                Role
              %th{scope: "col"}<
                Actions

          %tbody
            - users.each_with_index do |user,idx|
              %tr.item[user]
                %td= user.first_name
                %td= user.last_name
                %td= user.email
                %td= user.descriptions.count
                %td= organization_user.role
                %td.text-right<
                  = link_to([current_organization,user],class: "btn btn-show",title: "Show this user") do
                    View
                  %nbsp
                    - if policy(user).edit?
                      = link_to('Edit',edit_organization_user_path(current_organization,user),class: "btn btn-edit",title: "Edit this user")

                  %nbsp
                    - if policy(user).destroy?
                      = link_to("Delete",[current_organization,user],title: "Delete this user",class: "btn btn-destroy",method: :delete,data: { confirm: "Are you sure you want to delete #{user}?" })

        - if policy(:user).new?
          %nav.index-nav(role="navigation")
            = link_to new_organization_invitation_path(current_organization), class: 'btn btn-primary new-link' do
              Invite User
