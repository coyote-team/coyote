= simple_form_for organization, :validate => true, :html => { class: 'form-horizontal'}, :wrapper => :horizontal_form, :wrapper_mappings => { :check_boxes => :horizontal_radio_and_checkboxes, :radio_buttons => :horizontal_radio_and_checkboxes} do |f|
  = f.error_notification

  .form-inputs
    = f.input :title

  .form-actions
    .form-actions-inner
      = f.button :submit

      - if action_name == 'edit'
        %br
        %br
        = link_to organization, class: 'btn btn-info' do
          View this organization
      %br
      %br
      = link_to organizations_path, class: 'btn btn-info' do
        View all organizations
