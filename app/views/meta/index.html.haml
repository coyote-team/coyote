- meta title: title
.index-outer
  .index
    .index-inner
      %header
        %h1#page-title{tabindex: -1}=title
      %table.index-table
        %caption.sr-only Index table for meta
        %thead
          %tr
            %th{scope: "col"}
              Title
            %th{scope: "col"}
              Instructions
            %th{scope: "col"}
              Actions

        %tbody
          - list_of_meta.each do |metum|
            %tr.item
              %td= metum.title
              %td= metum.instructions
              %td.text-right
                = link_to [current_organization,metum], class: "btn btn-show", title: "Show this metum" do
                  View

                = link_to edit_organization_metum_path(current_organization,metum), class: "btn btn-edit", title: "Edit this metum"  do
                  Edit

      - if policy(Metum).new?
        %nav.index-nav{role:"navigation"}
          = link_to new_organization_metum_path(current_organization), class: 'btn btn-primary new-link' do
            %i.fa.fa-fw.fa-plus{"aria-hidden" => true}
            New Metum
