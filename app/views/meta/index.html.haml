-title = 'Listing Meta'
-meta title: title
- cache ['v1', admin?,  @meta] do
  .index-outer
    .index
      .index-inner
        %header{role: "header"}
          %h1#page-title{tabindex: -1}=title
        %table.index-table
          %caption.sr-only Index table for meta
          %thead
            %tr
              %th{scope: "col"}
                Title
              %th{scope: "col"}
                Instructions
              %th{scope: "col"}
                Actions

          %tbody
            - @meta.each_with_index do |metum, idx|
              %tr{class: "item"}
                %td= metum.title
                %td= metum.instructions
                %td.text-right
                  = link_to metum, class: "btn btn-show", title: "Show this metum" do
                    %i.fa.fa-fw.fa-eye{title: "Eye"}
                  = link_to edit_metum_path(metum), class: "btn btn-edit", title: "Edit this metum"  do
                    %i.fa.fa-fw.fa-pencil{title: "Pencil"}
                  -#= link_to metum, title: "Delete this metum" , class: "btn btn-delete",  :method => :delete, :data => { :confirm => "Are you sure you want to delete #{metum}?"} do
                    %i.fa.fa-fw.fa-trash{title: "Trash can"}

        %nav.index-nav{role:"navigation"}
          = link_to new_metum_path, class: 'btn btn-success new-link' do
            %i.fa.fa-fw.fa-plus{title: "Plus"}
            New Metum
