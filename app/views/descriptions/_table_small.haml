%table.table.table-black-border.table-sm<
  %thead<
    %th{scope: "col"}<
      Descriptions: #{descriptions.count} 
  %tbody<
    - descriptions.each do |d|
      %tr{class: "description"}<
        %td<
          %div{id: "small-table-description-#{d.id}"}
            =to_html d.text
          - user = d.user
          - user ||= ""
          -if d.user
            %p
              = render 'status', status: d.status
              %nbsp
              %span.label.label-info= d.metum
              %span.label.label-default= LanguageList::LanguageInfo.find(d.locale).name
            %p
              from
              =d.user
          -if admin?
            -disable_with = "<i id='disable-me' class='fa fa-spinner fa-spin fa-fw'></i>"
            - klass= 'btn btn-info '
            - form_klass = "inline-form arrange"
            - disabled = false
            - if d.status_id == 2
              - form_klass += 'disabled'
              - disabled = true
            = button_to [current_organization,d], params: {"description[status_id]": 2},
              form_class: form_klass, class: klass, disabled: disabled, method: :patch, remote: true,
              data: {disable_with: disable_with}, "aria-describedby" => "small-table-description-#{d.id}"  do
              Approve 

            - klass='btn btn-info '
            - form_klass = "inline-form arrange"
            - disabled = false
            - if d.status_id == 3
              - form_klass += 'disabled'
              - disabled = true
            = button_to [current_organization,d], params: {"description[status_id]": 3},
              form_class: form_klass, class: klass, disabled: disabled, method: :patch, remote: true,
              data: {disable_with: disable_with}, "aria-describedby" => "small-table-description-#{d.id}" do
              Reject

            =link_to edit_organization_description_path(current_organization,d), title: "Edit this description", class: 'btn btn-info', "aria-describedby" => "small-table-description-#{d.id}" do
              Edit
