= simple_form_for [current_organization,resource_group], validate: true, html: { multipart: true, class: 'form-horizontal' }, wrapper: :horizontal_form, wrapper_mappings: { check_boxes: :horizontal_radio_and_checkboxes, radio_buttons: :horizontal_radio_and_checkboxes, file: :horizontal_file_input} do |f|
  = f.error_notification
  .form-inputs
    = f.input :title


  .form-actions
    .form-actions-inner
      = f.button :submit, 'Save'
      - if action_name == 'edit'
        %br
        %br
        = link_to [current_organization,resource_group], class: 'btn btn-info' do
          View this Resource Group
      %br
      %br
      = link_to organization_resource_groups_path(current_organization), class: 'btn btn-info' do
        View all Resource Groups
