%tr.item[resource]
  %td= link_to(resource.identifier,[current_organization,resource])
  %td= resource.title
  %td.text-right
    - if policy(resource).index?
      = link_to 'View', [current_organization,resource], class: 'btn btn-show', title: 'Show this resource'
      %nbsp
    - if policy(resource).edit?
      = link_to 'Edit', edit_organization_resource_path(current_organization,resource), class: 'btn btn-edit', title: 'Edit this resource'
