h2 Filter View

.filter-view
  .filter-view-filters
    h1 Images
    .filter-set
      .filter-set-item.field.field--accessory
        .field-accessory.entypo-search
        input placeholder="Search by caption or description" type="search"
      .filter-set-item
        h3.filter-set-item-title Status
        .checkbox-list
          label.checkbox-list-item
            input type="checkbox" name="status"
            | Approved
          label.checkbox-list-item
            input type="checkbox" name="status"
            | Partially Completed
          label.checkbox-list-item
            input type="checkbox" name="status"
            | Not Described

  .filter-view-list
    h1 Total: 9,266
    .toolbar
      form.toolbar-item
        select
          option disabled=true selected=true value="" Bulk Assign
        input.button type="submit" value="Apply"

      .dropdown
        button.dropdown-toggle List View
        ul.dropdown-menu
          li.dropdown-menu-item List View
          li.dropdown-menu-item Grid View
    table
      thead
        tr
          th.table-checkbox
            label: input#select-all type="checkbox"
          th.table-checkbox colspan=3
            label for="select-all" All
      - 10.times do |i|
        tbody.table-body-group
          tr
            td.table-checkbox rowspan=3
              label: input id="table-input#{i}" type="checkbox"
            td.table-checkbox rowspan=3
              label for="table-input#{i}"
                = image_tag "http://via.placeholder.com/100x#{%w(100 125 150 200).sample}"
            td
              span.tag.tag--success Approved
              span.tag None
              span.tag.tag--okay.tag--secondary Alt
            td.table-action rowspan=3
              a.button.button--secondary href="#" Edit
              a.button.button--danger.button--secondary href="#" Remove
          tr
            td
              p Lorem ipsum dolor sit amet and some other stuff, too
          tr
            td
              span.chip
                span.chip-text Sheila Majumdar
                button.chip-action.chip-action--delete
