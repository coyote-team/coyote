-title = 'Websites'
-meta title: title
- cache ['v1', admin?,  @websites] do
  .index-outer
    .index
      .index-inner
        %header
          %h1#page-title{tabindex: -1}=title
        %table.index-table
          %caption.sr-only Index table for websites
          %thead
            %tr
              %th{scope: "col"}
                Title
              %th{scope: "col"}
                Url
              %th{scope: "col"}
                Actions

          %tbody
            - @websites.each_with_index do |website, idx|
              %tr{class: "item"}
                %td= website.title
                %td>
                  =link_to website.url, html: {target: "_blank"} do
                    =website.url
                %td.text-right
                  = link_to website, class: "btn btn-show", title: "Show this website" do
                    View
                  = link_to edit_website_path(website), class: "btn btn-edit", title: "Edit this website"  do
                    Edit
                  -#= link_to website, title: "Delete this website" , class: "btn btn-destroy",  :method => :delete, :data => { :confirm => "Are you sure you want to delete #{website}?"} do
                    %i.fa.fa-fw.fa-trash{title: "Delete", aria_hidden: true}

        %nav.index-nav{role:"navigation"}
          = link_to new_website_path, class: 'btn btn-primary new-link' do
            %i.fa.fa-fw.fa-plus{"aria-hidden" => true}
            New Website
