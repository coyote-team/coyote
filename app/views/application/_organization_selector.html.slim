- if organization_scope.many?
  ruby:
    organization_name = current_organization? ? current_organization.name : nil
    options = {
      toggle: {
        aria: {
          label: organization_name
        },
        class: "button"
      },
      wrapper: {
        id: "organization-dropdown"
      },
      label: icon(:chevron_down, prefix: organization_name || "Select an organization"),
      title: "Select an organization"
    }
  = dropdown(options) do
    - organization_scope.each do |organization|
      = dropdown_option link_to organization.name, url_for_organization(organization)
