- full_width ||= false
-disable_with = "<i id='disable-me' class='fa fa-spinner fa-spin fa-fw'></i>"
- assign_id = css_id + "-dropdown"
%span.dropdown
  -klass = "btn btn-primary dropdown-toggle "
  -klass += "btn-full " if full_width
  %button{id: assign_id, class: klass, "aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown", :type => "button"}
    Assign to
    %span.caret
  %ul.dropdown-menu{"aria-labelledby" => assign_id}
    - users.each do |user|
      %li
        = button_to assignments_path(assignment: {image_id: image.id, user_id: user.id}), action: :create, remote: true, format: :js, class: 'btn', title: "Assign image #{image.id} to #{user}", data: {disable_with: disable_with} do
          #{user}
