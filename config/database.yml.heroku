default: &default
  adapter: mysql2
production:
  <<: *default 
  # we have to do the below because Heroku one click installer won't attach the addon databases as DATABASE_URL. Also, the addon DBs
  # specify the wrong URL for our MySQL gem (mysql:// instead of , mysql2://)
  url: <%= 
    (ENV.fetch("JAWSDB_MARIA_URL") { abort("expected to have JAWSDB_MARIA_URL ENV variable set, check app.json") }).sub(/^mysql/,"mysql2")
  %>
